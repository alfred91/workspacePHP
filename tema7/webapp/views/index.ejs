<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Pokemon Lista</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <h1>Listado de Pok√©mon</h1>
    <img src="../images/pokeball.png">
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Detalles</th>
            </tr>
        </thead>
        <tbody>
            <% pokemons.forEach(function(pokemon) { %>
                <tr>
                    <td><%= pokemon.nombre %></td>
                    <td><a href="/pokemon/<%= pokemon._id %>">Ver Detalles</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
