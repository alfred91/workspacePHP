<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Listado de Pokémon</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <div class="title-container">
        <a href="/" class="logo-link">
            <h1 class="main-title">
                Listado de Pokémon <img src="/images/pokeball.png" class="pokeball-icon">
            </h1>
        </a>
        <div id="sessionContainer" class="session-container">
            <!-- Estado de sesión-->
        </div>
        <div class="button-container">
            <a href="/pokemon/create" class="button link-button">Crear Nuevo Pokémon</a>
            <form id="searchForm" class="search-form">
                <input type="text" id="searchInput" placeholder="Buscar por nombre..." class="search-input">
                <button type="submit" class="button search-button">Buscar</button>
            </form>
        </div>
    </div>


    <div class="filter-container">
        <label for="typeSelect">Filtrar por tipo:</label>
        <select id="typeSelect">
            <option value="Acero">Acero</option>
            <option value="Agua">Agua</option>
            <option value="Bicho">Bicho</option>
            <option value="Dragon">Dragon</option>
            <option value="Electrico">Electrico</option>
            <option value="Fuego">Fuego</option>
            <option value="Fantasma">Fantasma</option>
            <option value="Hada">Hada</option>
            <option value="Hielo">Hielo</option>
            <option value="Lucha">Lucha</option>
            <option value="Normal">Normal</option>
            <option value="Planta">Planta</option>
            <option value="Psiquico">Psiquico</option>
            <option value="Roca">Roca</option>
            <option value="Siniestro">Siniestro</option>
            <option value="Tierra">Tierra</option>
            <option value="Veneno">Veneno</option>
            <option value="Volador">Volador</option>
        </select>
        <button id="filterButton">Filtrar</button>
    </div>
    <div>
        <a href="/batalla">Iniciar Batalla</a>
    </div>

    <div class="container">
        <% pokemons.forEach(function(pokemon) { %>
            <div class="card">
                <img src="http://localhost:3000/images/<%= pokemon.imagen %>" alt="<%= pokemon.nombre %>">
                <h2>
                    <%= pokemon.nombre %>
                </h2>
                <!-- Detalles del Pokémon -->
                <ul class="list-disc pl-4">
                    <li>Especie: <%= pokemon.especie %>
                    </li>
                    <li>Tipo: <%= pokemon.tipo.join(", ") %></li>
                    <li>Altura: <%= pokemon.altura %> metros</li>
                    <li>Peso: <%= pokemon.peso %> kg</li>
                    <li>Vida: <%= pokemon.vida %></li>
                    <li>Puntos de Salud en Juego: <%= pokemon.puntosSaludJuego %></li>
                    <% if(pokemon.preevolucion) { %>
                    <li>Preevolución: <%= pokemon.preevolucion %></li>
                    <% } %>
                    <% if(pokemon.evolucion) { %>
                    <li>Evolución: <%= pokemon.evolucion %></li>
                    <% } %>
                    <p>
                    <li>Habilidades:</li>
                    <ul>
                        <% pokemon.habilidades.forEach(function(habilidad) { %>
                        <li><%= habilidad.nombre %>: <%= habilidad.damage %> daño</li>
                        <% }); %>
                    </ul>
                </ul>
                <a href=" /pokemon/<%=pokemon._id %>">Ver Detalles</a>
            </div>
            <% }); %>
    </div>

    <script>

        // Función para manejar la búsqueda
        document.getElementById('searchForm').onsubmit = async function (event) {
            event.preventDefault();
            const nombre = document.getElementById('searchInput').value;
            const token = localStorage.getItem('token');

            if (!token) {
                alert('Debes estar autenticado para realizar esta acción.');
                return;
            }

            try {
                const response = await fetch(`http://localhost:3000/api/pokemon/find/${nombre}`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (!response.ok) {
                    throw new Error(`Error en la respuesta del servidor: ${response.status} ${response.statusText}`);
                }

                const pokemon = await response.json();
                // Aquí puedes redirigir a la página de detalles del Pokémon o actualizar la UI como sea necesario
                window.location.href = `/pokemon/${pokemon._id}`; // Asegúrate de que esta ruta esté manejada en tu servidor
            } catch (error) {
                console.error('Error:', error);
            }
        };



        // Función para filtrar Pokémon por tipo
        document.getElementById('filterButton').onclick = async function () {
            const selectedType = document.getElementById('typeSelect').value;
            const token = localStorage.getItem('token');

            if (!token) {
                alert('Debes estar autenticado para realizar esta acción.');
                return;
            }

            try {
                const response = await fetch(`http://localhost:3000/api/pokemon/tipo/${selectedType}`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (!response.ok) {
                    throw new Error(`Error en la respuesta del servidor: ${response.status} ${response.statusText}`);
                }

                const data = await response.json();
                const container = document.querySelector('.container');
                container.innerHTML = '';

                data.forEach(pokemon => {
                    const card = document.createElement('div');
                    card.className = 'card';
                    card.innerHTML = `
                        <img src="http://localhost:3000/images/${pokemon.imagen}" alt="${pokemon.nombre}">
                        <h2>${pokemon.nombre}</h2>
                        <ul class="list-disc pl-4">
                            <li>Especie: ${pokemon.especie}</li>
                            <li>Tipo: ${pokemon.tipo.join(', ')}</li>
                            <li>Altura: ${pokemon.altura} metros</li>
                            <li>Peso: ${pokemon.peso} kg</li>
                            <li>Vida: ${pokemon.vida}</li>
                            <li>Puntos de Salud en Juego: ${pokemon.puntosSaludJuego}</li>
                            ${pokemon.preevolucion ? `<li>Preevolución: ${pokemon.preevolucion}</li>` : ''}
                            ${pokemon.evolucion ? `<li>Evolución: ${pokemon.evolucion}</li>` : ''}
                            <ul>
                                ${pokemon.habilidades.map(habilidad => `<li>${habilidad.nombre}: ${habilidad.damage} daño</li>`).join('')}
                            </ul>
                        </ul>
                        <a href="/pokemon/${pokemon._id}">Ver Detalles</a>
                    `;
                    container.appendChild(card);
                });
            } catch (error) {
                console.error('Error:', error);
            }
        };

        // Funciones para gestionar el estado de la sesión
        function updateSessionState() {
            const sessionContainer = document.getElementById('sessionContainer');
            const token = localStorage.getItem('token');
            const username = localStorage.getItem('username');

            if (token && username) {
                sessionContainer.innerHTML = `
                    <p>Sesión iniciada como: ${username}</p>
                    <button onclick="logout()">Cerrar Sesión</button>
                `;
            } else {
                sessionContainer.innerHTML = `
                    <a href="/login">Iniciar Sesión</a>
                `;
            }
        }

        function logout() {
            localStorage.removeItem('token');
            localStorage.removeItem('username');
            updateSessionState();
            window.location.href = '/'; // Redirige al inicio
        }


        document.addEventListener('DOMContentLoaded', updateSessionState);

        document.addEventListener('DOMContentLoaded', function () {
            const token = localStorage.getItem('token');
            if (token) {
                fetch('http://localhost:3000/api/pokemon/list', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        } else {
                            throw new Error('No autorizado');
                        }
                    })
                    .then(pokemons => {
                        // Aquí puedes procesar y mostrar los pokemons
                        const container = document.querySelector('.container');
                        container.innerHTML = ''; // Limpia el contenido existente

                        pokemons.forEach(pokemon => {
                            const card = document.createElement('div');
                            card.className = 'card';
                            card.innerHTML = `
                    <img src="http://localhost:3000/images/${pokemon.imagen}" alt="${pokemon.nombre}">
                    <h2>${pokemon.nombre}</h2>
                    <ul class="list-disc pl-4">
                        <li>Especie: ${pokemon.especie}</li>
                        <li>Tipo: ${pokemon.tipo.join(', ')}</li>
                        <li>Altura: ${pokemon.altura} metros</li>
                        <li>Peso: ${pokemon.peso} kg</li>
                        <li>Vida: ${pokemon.vida}</li>
                        <li>Puntos de Salud en Juego: ${pokemon.puntosSaludJuego}</li>
                        ${pokemon.preevolucion ? `<li>Preevolución: ${pokemon.preevolucion}</li>` : ''}
                        ${pokemon.evolucion ? `<li>Evolución: ${pokemon.evolucion}</li>` : ''}
                        <ul>
                            ${pokemon.habilidades.map(habilidad => `<li>${habilidad.nombre}: ${habilidad.damage} daño</li>`).join('')}
                        </ul>
                    </ul>
                    <a href="/pokemon/${pokemon._id}">Ver Detalles</a>
                `;
                            container.appendChild(card);
                        });
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        // Redirigir al login o mostrar un mensaje
                    });
            } else {
                // Redirigir al login o mostrar un mensaje
            }
        });


    </script>


</body>

</html>